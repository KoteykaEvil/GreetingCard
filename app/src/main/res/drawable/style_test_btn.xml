<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/hovered"
        android:state_hovered="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/setting_btn_end_gradient"
                android:startColor="@color/setting_btn_start_gradient" />
            <corners android:radius="@dimen/setting_btn_corner" />
            <stroke
                android:width="@dimen/setting_btn_stroke"
                android:color="@color/setting_btn_stroke_color" />
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/setting_btn_end_gradient"
                android:startColor="@color/setting_btn_start_gradient" />
            <corners android:radius="@dimen/setting_btn_corner" />
            <stroke
                android:width="@dimen/setting_btn_stroke"
                android:color="@color/setting_btn_stroke_color" />
        </shape>
    </item>

    <item
        android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/setting_btn_end_gradient"
                android:startColor="@color/setting_btn_start_gradient" />
            <stroke
                android:width="@dimen/setting_btn_stroke"
                android:color="@color/setting_btn_stroke_color" />
            <corners android:radius="@dimen/setting_btn_corner" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/setting_start_btn_end_gradient"
                android:startColor="@color/setting_start_btn_start_gradient" />
            <stroke
                android:width="@dimen/setting_btn_stroke"
                android:color="@color/setting_start_btn_stroke" />
            <corners android:radius="@dimen/setting_btn_corner" />
        </shape>
    </item>

</selector>